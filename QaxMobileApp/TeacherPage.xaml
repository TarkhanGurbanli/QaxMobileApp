<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QaxMobileApp.TeacherPage"
             BackgroundColor="#EEF1F6"
             Title="TeacherPage">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">

        <Button Text="Abituriyent" TextColor="#EEF1F6"
            BackgroundColor="#407c87" FontSize="22"
            FontAttributes="Bold" BorderColor="#A5DBDD"
            Padding="10" Margin="10" Clicked="Abituriyent_Page"/>

        <!--Burda asagi sinifler, Abituriyent ile eyni-->
        <Button Text="Tekmillesme" TextColor="#EEF1F6"
            BackgroundColor="#407c87" FontSize="22"            
            FontAttributes="Bold" BorderColor="#A5DBDD"
            Padding="10" Margin="10"/>
        <!--Burda asagi sinifler 5 ci sinife qeder, Abituriyent ile eyni-->
        <Button Text="Ibtidai" TextColor="#EEF1F6"
            BackgroundColor="#407c87" FontSize="22"
            FontAttributes="Bold" BorderColor="#A5DBDD"
            Padding="10" Margin="10"/>

        <Button Text="Melumat" TextColor="#EEF1F6"
            BackgroundColor="#407c87" FontSize="22"
            FontAttributes="Bold" BorderColor="#A5DBDD"
            Padding="10" Margin="10"/>

    </VerticalStackLayout>
</ContentPage>